<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Products Page</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f4f4;
            padding: 30px;
        }

        .card img {
            height: 180px;
            object-fit: cover;
        }

        .card:hover {
            transform: scale(1.03);
            transition: 0.3s;
        }
    </style>
</head>

<body>

    <h1 class="text-center mb-4">Products Page</h1>

    <div class="container">
        <div class="row g-4">
            <% for (let product of products) { %>
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 shadow">
                        <img src="<%= product.image %>" class="card-img-top">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text small">
                                <%= product.desc %>
                            </p>
                            <p class="fw-bold text-success mt-auto">
                                $<%= product.price %>
                            </p>
                            <p class="text-end">
                                <a href="/products/<%= product.id %>/delete" class="btn btn-primary btn-sm">
                                    Delete
                                </a>
                            </p>
                            <p class="text-end">
                                <a href="products/<%= product.id %>/edit" class="btn btn-secondary btn-sm">
                                    Edit
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>

        </div>
    </div>
    <div style="text-align: center; margin-top: 30px;">
        <a href="/products/add" style="text-decoration: none; color: #007BFF;">Add New Product</a>
    </div>


</body>
</html>
